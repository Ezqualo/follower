//codigo para crear nuevos select de areas y personas
        var maxField = 20; //Input fields increment limitation
        var addButton = $('.add_button'); //Add button selector
        var wrapper = $('.field_wrapper'); //Input field wrapper
        var wrapper2 = $('.field_wrapper2'); //Input field wrapper
        var fieldHTML = '<span style="color: yellow;"> </span><label id="nom-campo"></label><select name="areas" id="areas" class="form-control" style="height:60px; height: 40px;"><option value="" disabled selected>--Seleccionar--</option></select>';
        var fieldHTML2 = '<span style="color: yellow;"> </span><label id="nom-campo"></label><select class="form-control" style="height:60px; height: 40px;" name="personas" id="personas"><option value="" disabled selected>--Seleccionar--</option></select>';
        var x = 1; //Initial field counter is 1

        /*var span = $('<span>').prop('style','color: yellow;');
        var label = $('<label>') .prop('id','nom-campo');

        var select = $('<select>').prop('id', 'areas1')
            .prop('name', 'areas1')
            .prop('class','form-control')
            .prop('style','height:60px; height: 40px;');

        //$('#container').append(span).append(label).append(select);
        //var fieldHTML = select;
        $(areas_a_select).each(function() {
            fieldHTML.append($("<option>")
                .prop('value', this)
                .text(this.charAt(0).toUpperCase() + this.slice(1)));
        });
        var br = $("<br>");
        $(fieldHTML).append(span).append(label).append(select).append(br);*/

        //Once add button is clicked
        $(addButton).click(function(){
            //Check maximum number of input fields
            if(x < maxField){
                x++; //Increment field counter
                $(wrapper).append(fieldHTML); //Add field html
                $(wrapper2).append(fieldHTML2); //Add field html
                //$(wrapper2).append(fieldHTML3); //Add field html
            }
        });

        //Once remove button is clicked
        $(wrapper2).on('click', '.remove_button', function(e){
            e.preventDefault();
            $(this).parent('div').remove(); //Remove field html
            x--; //Decrement field counter
        });
        //Once remove button is clicked
        $(wrapper).on('click', '.remove_button', function(e){
            e.preventDefault();
            $(this).parent('div').remove(); //Remove field html
            x--; //Decrement field counter
        });
