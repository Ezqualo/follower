            if(cadenaIngresada == 'BFGOODRICH') {
                //alert('El kilogramo de naranjas cuesta $0.59.'); cliente_odt
                <?php
                $query = $mysqli->query("SELECT DISTINCT nombreCliente FROM clientes WHERE ejecutivasCliente like '%$userlogin%' AND empresaCliente = 'BFGOODRICH'");
                while ($valores = mysqli_fetch_array($query)) {
                    $clientes[] = $valores[nombreCliente];
                }
                ?>
                document.getElementById("cliente_odt").innerHTML = "";
                var list_clientes = <?php echo json_encode($clientes);?>;
                var ddlItems = document.getElementById("cliente_odt"),
                    itemArray = list_clientes;

                for (var i = 0; i < itemArray.length; i++) {
                    var opt = itemArray[i];
                    var el = document.createElement("option");
                    el.textContent = opt;
                    el.value = opt;
                    ddlItems.appendChild(el);
                }
            }
